extends layout
include mixins

block content

  div.container.background
    div.col-md-6
      div.col-md-1
      div.col-md-10
        img(src='/../images/lingo2.png', alt='Lingo Logo', style='width:348px;height:318px;')
        h2.titill Lingo Dingo is all about having fun and learning languages at the same time!
      div.col-md-1
      div.col-xs-12(style='height:60px;')
        ul
          row
            if errors && submitted
              h4(style='color: red;')= errorMessage
            div(id='emailWarning' class="message")
            div(id='password1Warning' class="message")

    div.col-md-6
      div.col-md-2
      div(class="col-md-8 card" style="background-color:rgba(0, 0, 0, 0.5);", id='loginContainer')
        form(id="loginForm" method='post' action=action, class="login")
          each field in form
            +field(field, submitted)  
          button(class="btn btn-danger top-buffer" role="button" id="logInUser")
            span.glyphicon.glyphicon-ok-circle 
            |  #{submitButton}
          button(type='button' class="btn btn-primary top-buffer" id='toSignUp')
            span(class=submitButton==='Login' ? 'glyphicon glyphicon-user' : 'glyphicon glyphicon-menu-left')
            |    #{switchButton}
      div.col-md-2